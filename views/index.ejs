<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>
<body>
<section class="section">
    <div class="columns is-desktop is-vcentered">
        <div class="column is-10 is-offset-1 notification is-info is-light box container">
            <div class="title">Restaurants</div>
            <% if (locals.restaurants) { %>
                <div class="table-container">
                    <table class="table is-bordered is-hoverable is-striped is-narrow">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% restaurants.forEach(restaurant => { %>
                                <tr>
                                    <td><%= restaurant.name %></td>
                                    <td><%= restaurant.description %></td>
                                    <td>
                                        <a href="/deleteRestaurant?id=<%= restaurant.restaurant_id %>" class="button is-danger is-small">
                                            <span class="icon is-small">
                                                <i class="fas fa-trash"></i>
                                            </span>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/reviews?restaurantId=<%= restaurant.restaurant_id %>" class="button is-link is-small">
                                            <span class="icon is-small">
                                                <i class="fas fa-star"></i>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4">Total Restaurants: <%= restaurants.length %></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            <% } else { %>
                <p>No restaurants available.</p>
            <% } %>
            <form action="/addRestaurant" method="post">
                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Add New Restaurant</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <p class="control is-expanded">
                                <input name="name" class="input" type="text" placeholder="Restaurant Name" required />
                            </p>
                        </div>
                        <div class="field">
                            <p class="control is-expanded">
                                <textarea name="description" class="textarea" placeholder="Description" required></textarea>
                            </p>
                        </div>
                        <div class="field">
                            <button class="button is-link" type="submit">
                                <span>Add</span>
                                <span class="icon is-small">
                                    <i class="fas fa-plus"></i>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
</body>
</html>
